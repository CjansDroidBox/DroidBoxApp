<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Night Theme -->
    <style name="Theme.DROIDBOX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- App-wide colors -->
        <item name="colorPrimary">@color/black</item> <!-- Darker primary color -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/black</item> <!-- Night background -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Night text color -->
    </style>

    <!-- TabLayout Theme -->
    <style name="TabLayoutTheme">
        <item name="tabIndicatorColor">#42A5F5</item> <!-- Bright Blue -->
        <item name="tabIconTint">?android:textColorPrimary</item> <!-- Adapts to Day/Night -->
        <item name="tabRippleColor">?android:colorControlHighlight</item>
    </style>
</resources>
