<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIconTint="?attr/colorOnPrimary"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- App Logo or Text -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLTA"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/appDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Community Language Training App)"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="italic"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/appTitle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="150dp" />

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search"
                android:padding="8dp"
                app:tint="?attr/colorOnPrimary"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="96dp"
                android:layout_centerVertical="true" />

            <!-- Notification Button -->
            <ImageView
                android:id="@+id/notificationButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_notification_bell"
                android:contentDescription="Notifications"
                android:padding="8dp"
                app:tint="?attr/colorOnPrimary"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="48dp"
                android:layout_centerVertical="true" />

            <!-- Notification Badge -->
            <TextView
                android:id="@+id/notificationBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignEnd="@+id/notificationButton"
                android:layout_alignTop="@+id/notificationButton"
                android:visibility="gone"
                android:textColor="@color/red"/>

            <!-- Account Button -->
            <ImageView
                android:id="@+id/accountButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_account"
                android:contentDescription="Account"
                android:padding="8dp"
                app:tint="?attr/colorOnPrimary"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- SearchView -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for posts, videos, flashcards..."
        android:visibility="gone" />

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#42A5F5"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIconTint="?attr/colorOnPrimary" />

    <!-- Bottom Divider for TabLayout -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp" />

    <!-- FrameLayout to Replace Fragments Dynamically -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
