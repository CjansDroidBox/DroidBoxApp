<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/flashcardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLASHCARDS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Counter -->
    <TextView
        android:id="@+id/cardProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 out of 20"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/flashcardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Card Stack -->
    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/cardStackView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardProgress"
        app:layout_constraintBottom_toTopOf="@+id/bottomControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Flip Button -->
        <Button
            android:id="@+id/flipCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLIP CARDS"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Language Button -->
        <Button
            android:id="@+id/languageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LANGUAGE"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/ttsSpeedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TTS Speed"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/reshuffleButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reshuffle Deck"
            app:layout_constraintTop_toBottomOf="@id/ttsSpeedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
