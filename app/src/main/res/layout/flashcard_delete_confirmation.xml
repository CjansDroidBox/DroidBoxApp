<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/deleteSectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Section"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/deleteSectionMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete this Section? This action cannot be undone."
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Section Selected to be Deleted -->
    <TextView
        android:id="@+id/sectionSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelDeleteAccountButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmDeleteAccountButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
