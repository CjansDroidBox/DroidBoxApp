<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Front Side -->
        <LinearLayout
            android:id="@+id/frontSide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/frontDeckTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ttsTitleIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_tts" />
        </LinearLayout>

        <!-- Back Side -->
        <LinearLayout
            android:id="@+id/backSide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/backDeckDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back Description"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/ttsDescriptionIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_tts" />
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
