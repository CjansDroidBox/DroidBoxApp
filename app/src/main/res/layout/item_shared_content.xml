<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Title Section -->
    <TextView
        android:id="@+id/sharedContentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shared Content Title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <!-- Description Section -->
    <TextView
        android:id="@+id/sharedContentDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shared Content Description"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Type Section -->
    <TextView
        android:id="@+id/sharedContentType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type: Flashcard"
        android:textStyle="italic"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <!-- Like, Comment, Share, Download Section -->
    <LinearLayout
        android:id="@+id/likeCommentShareContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Like Button -->
        <ImageView
            android:id="@+id/likeButton"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_like"
            android:contentDescription="Like" />

        <!-- Comment Button -->
        <ImageView
            android:id="@+id/commentButton"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_comment"
            android:contentDescription="Comment" />

        <!-- Share Button -->
        <ImageView
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_share"
            android:contentDescription="Share" />

        <!-- Download Button -->
        <ImageView
            android:id="@+id/actionButton"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_download"
            android:contentDescription="Download" />
    </LinearLayout>
</LinearLayout>
